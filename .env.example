# Server Configuration
NODE_ENV=development
PORT=5003
MONGO_URI=mongodb://localhost:27017/manychatbot

# Authentication
JWT_SECRET=your_jwt_secret_key_change_in_production
JWT_EXPIRE=30d

# Email Configuration
EMAIL_SERVICE=gmail
EMAIL_USERNAME=your-email@gmail.com
EMAIL_PASSWORD=your-app-password
EMAIL_FROM=noreply@manychatbot.com

# ManyChat API Configuration
MANYCHAT_API_URL=https://api.manychat.com
MANYCHAT_API_KEY=your_manychat_api_key

# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key
OPENAI_API_VERSION=2024-07-01  # Latest API version as of 2025
OPENAI_ORG_ID=your_organization_id  # Optional

# OpenAI Models
OPENAI_MODEL=gpt-4o-2024-08-06
OPENAI_MINI_MODEL=gpt-4o-mini
OPENAI_STANDARD_MODEL=gpt-4o

# Model parameters
OPENAI_MAX_TOKENS=4096  # Maximum generation length
OPENAI_TEMPERATURE=0.7  # Creativity vs determinism (0-1)

# Google Gemini API Configuration
GEMINI_API_KEY=your_gemini_api_key
GEMINI_VERSION=v1beta

# Gemini Models
GEMINI_MODEL=gemini-2.0-flash-001
GEMINI_THINKING_MODEL=gemini-2.5-pro-exp-03-25
GEMINI_LITE_MODEL=gemini-2.0-flash-lite-001

# DeepGram Speech-to-Text API Configuration
DEEPGRAM_API_KEY=your_deepgram_api_key
DEEPGRAM_PROJECT_ID=your_deepgram_project_id

# DeepGram Model Settings
DEEPGRAM_MODEL=nova-2  # Latest high-accuracy ASR model
DEEPGRAM_LANGUAGE=en-US
DEEPGRAM_SMART_FORMAT=true
DEEPGRAM_PUNCTUATE=true
DEEPGRAM_DIARIZE=true  # Speaker identification

# Model parameters for all AI services
API_MAX_TOKENS=8192  # Max tokens for most models
API_TEMPERATURE=0.7
